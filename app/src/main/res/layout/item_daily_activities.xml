<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/dailyactivityimg"
        android:layout_width="@dimen/_100dp"
        android:layout_height="@dimen/_100dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dailyactivitytitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_22dp"
        android:textColor="@color/white"
        android:textSize="@dimen/_24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/dailyactivityimg"
        app:layout_constraintStart_toEndOf="@id/dailyactivityimg"
        app:layout_constraintTop_toTopOf="@id/dailyactivityimg" />

    <TextView
        android:id="@+id/dailyactivitydesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4dp"
        android:textColor="@color/dustygray"
        android:textSize="@dimen/_11sp"
        app:layout_constraintStart_toStartOf="@id/dailyactivitytitle"
        app:layout_constraintTop_toBottomOf="@id/dailyactivitytitle" />


</androidx.constraintlayout.widget.ConstraintLayout>
