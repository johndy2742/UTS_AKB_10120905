<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bgdreams">

    <ImageView
        android:id="@+id/img1"
        android:layout_width="@dimen/_125dp"
        android:layout_height="@dimen/_125dp"
        android:src="@drawable/dreams"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_22dp"/>

    <TextView
        android:id="@+id/titleimg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/img1"
        app:layout_constraintEnd_toEndOf="@id/img1"
        app:layout_constraintTop_toBottomOf="@id/img1"
        android:text="Dreams"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_25dp"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/img1"
        app:layout_constraintEnd_toEndOf="@id/img1"
        app:layout_constraintTop_toBottomOf="@id/titleimg1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/descimg5"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="10sp"
        android:layout_marginTop="@dimen/_23dp"
        android:layout_marginBottom="@dimen/_39dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>